<UserControl x:Class="CalculatorWPF.VariablesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CalculatorWPF"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=local:VariablesViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <ListBox ItemsSource="{Binding Variables}" VerticalAlignment="Top" MinHeight="200">
        </ListBox>
        <UniformGrid VerticalAlignment="Bottom" Rows="2">
            <TextBox VerticalAlignment="Bottom"/>
            <TextBox VerticalAlignment="Bottom"/>
            <Button VerticalAlignment="Bottom" Content="Add"/>
            <Button VerticalAlignment="Bottom" Content="Delete"/>
        </UniformGrid>
    </Grid>
</UserControl>
